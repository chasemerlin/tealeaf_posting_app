<%= form_for @post do |f| %>
	<%= f.label :title %>
	<%= f.text_field :title %>
	<%= f.label :url %>
	<%= f.text_field :url %>
	<%= f.label :description %>
	<%= f.text_area :description, :rows => "4" %>
	<%= f.label :category %>
	<% #Put in select %>
	<%= f.select :category_ids, @categories.collect{|c| [c.name, c.id]}, {}, {multiple: 'multiple'}%>
	<br/>
	<%= f.submit class: "btn btn-primary" %>
<% end %>